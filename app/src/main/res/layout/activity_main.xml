<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewDrinkOrder"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Order Now!"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary"
        android:textSize="34sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewDrink1"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                app:srcCompat="@drawable/drink1" />

            <ImageView
                android:id="@+id/imageViewDrink2"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                app:srcCompat="@drawable/drink2" />

            <ImageView
                android:id="@+id/imageViewDrink3"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                app:srcCompat="@drawable/drink3" />

            <ImageView
                android:id="@+id/imageViewDrink4"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                app:srcCompat="@drawable/drink4" />

            <ImageView
                android:id="@+id/imageViewDrink5"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                app:srcCompat="@drawable/drink1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>